alias h='history'
alias ll='ls -lhaG'

alias vi='vim'

alias hu='htop --sort-key cpu'
alias hm='htop --sort-key memory'
alias nr='rlwrap node-repl'

# Git
alias g='git status'
alias ga='git add'
alias gc='git commit -va'
alias gd='git diff'
alias gpl='git pull'
alias gps='git push'
alias gpull='git pull'
alias gpush='git push'

function gg () {
  git commit -vam "$*"
}
