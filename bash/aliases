alias h='history'
alias ll='ls -lhaG'

alias vi='vim'

alias hu='htop --sort-key cpu'
alias hm='htop --sort-key memory'
alias nr='rlwrap node-repl'

# Git
alias g='git status'
alias ga='git add'
alias gb='git branch'
alias gc='git commit -v'
alias gca='git commit -va'
alias gco='git checkout'
alias gd='git diff --no-ext-diff -w "$@" | vim -R -'
alias gf='git fetch'
alias gl='git log --no-ext-diff -w "$@" | vim -R -'
alias glo='git log --pretty=oneline -w "$@" | vim -R -'
alias glog='git log --pretty=oneline --graph --no-ext-diff -w "$@" | vim -R -'
alias gm='git mergetool -t opendiff'
alias gpl='git pull'
alias gps='git push'
alias gr='git rebase'
alias gri='git rebase -i'

function gg () {
  git commit -vam "$*"
}

