# prevent encoding issues
export LC_ALL=en_US.UTF-8
export LANG=en_US.UTF-8

# PATH additions for own bin dir
export PATH=/usr/local/bin:$PATH
export PATH=/usr/local/sbin:$PATH
export PATH=~/development/bin:$PATH

# PTHONPATH addition for own site-packages
export PYTHONPATH='/Users/alx/development/python/site-packages':$PYTHONPATH
export PYTHONPATH='/usr/local/Cellar/python/2.6.5/lib/python2.6/site-packages':$PYTHONPATH

# erlang libraries
export ERL_LIBS=/Users/alx/development/erlang/externals/

# editor enhanced
export VIM_APP_DIR=/Applications
export EDITOR='vim'
# export EDITOR='mvim -f -c "au VimLeave * opendiff -a Terminal"'

# bash completion support
if [ -f `brew --prefix`/etc/bash_completion ]; then
  . `brew --prefix`/etc/bash_completion
fi

NVM_DIR=$HOME/.nvm
. $NVM_DIR/nvm.sh

# rvm support
if [[ -s ~/.rvm/scripts/rvm ]] ; then
    source ~/.rvm/scripts/rvm ;
fi
