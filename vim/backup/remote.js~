var
  sys = require('sys'),
  ssh = process.createChildProcess('ssh', ['stage01']),
  first = true;

ssh.addListener('output', function (stdout) {
  sys.puts(stdout);  
  if (first) {
    sys.puts('write');
    ssh.write('pfexec su - deploy', 'ascii');

    first = false;
  }
  
});
ssh.addListener('error', function (stderr) {
  sys.puts(stderr);
});

